{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": [
      "ES6",
      "DOM",
    ],
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "./typings/*"
      ],
      "error_message": [
        "./lib/message/error_message"
      ],
      "log_message": [
        "./lib/message/log_message"
      ],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./.build",
    "declarationDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "./dist",
    "./.build",
    "./lib/**/*.tests.js",
    "./lib/**/*.tests.ts",
    "./lib/**/*.spec.ts",
    "./lib/**/*.umdtests.js",
    "./lib/tests",
    "node_modules"
  ],
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.js",
    "./lib/modules/**/*.ts",
    "./lib/modules/**/**/*.ts"
  ]
}
