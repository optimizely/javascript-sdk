{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "vitest/jsdom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "exclude": [
    "./dist",
    "./lib/**/*.tests.js",
    "./lib/**/*.tests.ts",
    "./lib/**/*.umdtests.js",
    "node_modules"
  ],
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.js",
    "./lib/modules/**/*.ts",
    "./lib/modules/**/**/*.ts",
    "tests/**/*.ts",
    "**/*.spec.ts"
  ]
}
